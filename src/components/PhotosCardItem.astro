---
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'

interface Props {
  photo: CollectionEntry<'photos'>
}

const { photo } = Astro.props
---

<Image
  src={photo.data.image.src}
  alt={photo.data.image.description}
  quality={60}
  height="80"
  densities={[1.5, 2]}
  loading="lazy"
/>

<style>
  .photo-container {
    padding: 0.125rem;
  }

  img {
    display: block;
    height: var(--space-9);
    width: auto;
    padding: var(--space-1);
    background-color: var(--color-stark-background);
  }
</style>
