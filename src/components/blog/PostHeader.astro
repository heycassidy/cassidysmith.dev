---

const { class: className, ...rest } = Astro.props;

---

<header class={className} {...rest}>
  <slot />
</header>


<style lang="scss">
  @import '@styles/mixins.scss';


  @include colorModeStyles(light) {
    header {
      --background-color: var(--color-tertiary-275);
      --color: var(--color-tertiary-775);
    }
  }
  @include colorModeStyles(dark) {
    header {
      --background-color: var(--color-tertiary-850);
      --color: var(--color-tertiary-275);
    }
  }

  header {
    padding-top: calc(var(--fluid-bento-padding) * 2);
    padding-bottom: calc(var(--fluid-bento-padding) * 2);
    border-radius: var(--fluid-bento-radius);
    background-color: var(--background-color);
    color: var(--color);
  }

</style>