---
import { css } from '@styled-system/css'
import interactiveSurface from '@recipes/interactiveSurface'
import focusRing from '@recipes/focusRing'
import type { CollectionEntry } from 'astro:content'
import ContentLink from '@components/ContentLink.astro'

interface Props {
  tag: CollectionEntry<'tags'>
}

const { tag } = Astro.props
---

<ContentLink
  content={tag}
  class:list={[
    css({
      fontSize: 'xs',
      borderRadius: 'md',
      paddingBlock: '0.5',
      paddingInline: '1.5',
      lineHeight: 'tight',
    }),
    focusRing(),
    interactiveSurface({ material: 'adaptive' }),
  ]}># {tag.data.title}</ContentLink
>
