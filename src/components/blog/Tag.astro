---
import { css } from '@styled-system/css'
import interactiveSurface from '@recipes/interactiveSurface'
import focusRing from '@recipes/focusRing'
import type { CollectionEntry } from 'astro:content'
import { tagPath } from 'astro-path-helpers'

interface Props {
  tag: CollectionEntry<'tags'>
}

const { tag } = Astro.props
---

<a
  href={tagPath(tag.id)}
  class:list={[
    css({
      fontSize: 'xs',
      borderRadius: 'md',
      paddingBlock: '0.5',
      paddingInline: '1.5',
      lineHeight: 'tight',
    }),
    focusRing(),
    interactiveSurface({ material: 'adaptive' }),
  ]}># {tag.data.title}</a
>
