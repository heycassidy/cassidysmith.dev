---
import SocialLink from './SocialLink.astro'

---


<section class="social-links">
  <div class="bento-container">
    <h3>Elsewhere Online</h3>
  
    <div class="links-layout">
      <SocialLink href="https://github.com/heycassidy" external icon="ion:logo-github">Github</SocialLink>
      <SocialLink href="https://www.linkedin.com/in/csdev/" external icon="ion:logo-linkedin">LinkedIn</SocialLink>
      <SocialLink href="https://www.instagram.com/cassycle/" external icon="ion:logo-instagram">Instagram</SocialLink>
    </div>
  </div>


  <span class="dot-filler"></span>
</section>


<style lang="scss">
  @import '../styles/mixins.scss';
  
  .social-links {
    grid-area: social;
    display: flex;
    flex-wrap: wrap;
    gap: var(--fluid-bento-gap);
    
    @include breakpoint-medium {
      flex-direction: column;
    }
  }
  
  .bento-container {
    max-width: fit-content;
    flex: 1 0 0;
    color: var(--color-secondary-600);
    border-radius: var(--fluid-bento-radius);
    padding: var(--fluid-bento-padding);
    border-color: var(--color-secondary-600);
    border: 2px solid;

  }

  .links-layout {
    display: grid;
    margin-top: var(--space-3);
    gap: var(--fluid-bento-gap);
    grid-template-columns: 1fr 1fr 1fr;
    container: social-links-layout;
  }

  h3 {
    color: var(--color-secondary-600);
  }

  .dot-filler {
    border-radius: var(--fluid-bento-radius);
    flex: 1 1 5rem;
    @include dot-pattern-background(var(--color-primary-425), 6px);
  }
</style>
