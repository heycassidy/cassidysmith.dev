---
import SocialLink from './SocialLink.astro'

---


<section class="social-links">
  <h2>Browse the Socials</h2>
  
  <div class="links-layout">
    <SocialLink href="https://github.com/heycassidy" external icon="ion:logo-github">Github</SocialLink>
    <SocialLink href="https://www.linkedin.com/in/csdev/" external icon="ion:logo-linkedin">LinkedIn</SocialLink>
    <SocialLink href="https://www.instagram.com/cassycle/" external icon="ion:logo-instagram">Instagram</SocialLink>
  </div>
</section>


<style lang="scss">
  @import '../styles/mixins.scss';

  @include colorModeStyles(light) {
    .social-links {
      --color: var(--color-secondary-700);
      --background-color: var(--color-secondary-175);
    }
  }
  @include colorModeStyles(dark) {
    .social-links {
      --color: var(--color-secondary-350);
      --background-color: var(--color-secondary-875);
    }
  }
  
  .social-links {
    grid-area: social;
    color: var(--color);
    background-color: var(--background-color);
    border-radius: var(--fluid-bento-radius);
    padding: var(--fluid-bento-padding);
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto 1fr;
    gap: var(--fluid-bento-gap);
  }

  .links-layout {
    display: grid;
    gap: var(--fluid-bento-gap);
    grid-template-columns: 1fr 1fr 1fr;
    container: social-links-layout;
  }
  
  h2 {
    color: currentColor;
    margin: 0;
  }
</style>
