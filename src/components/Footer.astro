    className,
    css({
      backgroundColor: 'columnRule',
      paddingBlockEnd: 'columnHeaderBar',
      paddingInline: 'columnRule',
    }),
  ]}
>
  <div
    class={css({
      display: 'grid',
      justifyItems: 'center',
      paddingBlock: 2,
      paddingInline: 2,
      fontSize: 'xs',
      borderRadius: 'bento',
      _light: {
        backgroundColor: 'neutral.50',
      },
      _dark: {
        backgroundColor: 'neutral.875',
      },
    })}
  >
    <p>
