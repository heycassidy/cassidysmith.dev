---
import { Icon } from 'astro-icon/components'
---

<li>
  <Icon size={24} name="ri:corner-down-right-line" />
  <span>
    <slot />
  </span>
</li>

<style lang="scss">
  @use '@styles/mixins';

  @include mixins.color-mode(light) {
    li {
      --marker-color: var(--color-primary-525);
    }
  }

  @include mixins.color-mode(dark) {
    li {
      --marker-color: var(--color-primary-425);
    }
  }

  li {
    position: relative;
    display: grid;
    grid-template-columns: 1.2em auto;
    column-gap: var(--space-2);
  }

  li + li {
    margin-top: var(--space-2);
  }

  [data-icon] {
    color: var(--marker-color);
    position: relative;
    left: 0;
    width: 100%;
    height: auto;
    margin-top: 0.2em;
  }

  @at-root :global(ul) {
    padding-left: var(--space-2);

    > li {
      &::marker {
        content: ' ';
      }
    }
  }
</style>
