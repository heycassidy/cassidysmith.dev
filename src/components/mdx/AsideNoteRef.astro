---
import { css } from '@styled-system/css'
import textLink from '@recipes/textLink'
import focusRing from '@recipes/focusRing'
const { id, refLabel } = Astro.props
---

<sup
  id={`note-ref-${id}`}
  class={css({
    display: 'inline-flex',
  })}
>
  <a
    href={`#note-${id}`}
    class:list={[
      css({
        lineHeight: 1,
        fontSize: 'sm',
      }),
      textLink({ visited: false }),
      focusRing(),
    ]}>{refLabel}</a
  >
</sup>
