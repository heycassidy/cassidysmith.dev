---
const { id, refLabel } = Astro.props
---

<sup id={`note-ref-${id}`}>
  <a href={`#note-${id}`}>{refLabel}</a>
</sup>

<style lang="scss">
  @use '@styles/mixins';

  sup {
    display: inline-flex;
  }

  a {
    @include mixins.text-link($visited: false);
    line-height: 1;
    font-size: var(--font-size--1);
  }
</style>
