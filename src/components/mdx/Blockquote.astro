---
const {...props} = Astro.props;

---

<blockquote {...props}>
  <slot />
</blockquote>


<style lang="scss">
  @import '@styles/mixins.scss';

  @include colorModeStyles(light) {
    blockquote {
      --color: var(--color-primary-600);
      --border-color: var(--color-primary-275);
    }
  }
  
  @include colorModeStyles(dark) {
    blockquote {
      --color: var(--color-primary-175);
      --border-color: var(--color-primary-700);
    }
  }
  
  blockquote {
    color: var(--color);
    padding-block: calc(var(--fluid-bento-gap) * 2);
    text-align: center;
    font-family: var(--font-syne);
    font-size: var(--font-size-4);
    position: relative;
    text-wrap: balance;


    &::before, &::after {
      content: ' ';
      display: block;
      margin-inline: auto;
      width: min(100%, var(--space-8));
      height: 2px;
      background-color: var(--border-color);
    }
    &::before {
      margin-bottom: var(--fluid-bento-padding);
    }
    &::after {
      margin-top: var(--fluid-bento-padding);
    }
  }
</style>