---
const { ...props } = Astro.props
---

<blockquote {...props}>
  <slot />
</blockquote>

<style lang="scss">
  @import '@styles/mixins.scss';

  @include color-mode(light) {
    blockquote {
      --color: var(--color-primary-600);
      --border-color: var(--color-primary-275);
    }
  }

  @include color-mode(dark) {
    blockquote {
      --color: var(--color-primary-175);
      --border-color: var(--color-primary-700);
    }
  }

  blockquote {
    color: var(--color);
    padding-block: calc(var(--fluid-bento-gap) * 2);
    text-align: center;
    font-family: var(--font-syne);
    font-size: var(--font-size-4);
    position: relative;
    text-wrap: balance;
    display: grid;
    grid-template-columns: 1fr;
    row-gap: var(--fluid-bento-gap);

    :global(> *) {
      grid-column: 1;
    }

    &::before,
    &::after {
      content: ' ';
      display: block;
      margin-inline: auto;
      width: min(100%, var(--space-8));
      height: 2px;
      background-color: var(--border-color);
    }
  }
</style>
