---
import type { HTMLAttributes } from 'astro/types';
import type { CollectionEntry, CollectionKey } from 'astro:content';

interface Props extends HTMLAttributes<'a'> {
  content: CollectionEntry<CollectionKey>;
  linkText?: string;
}

const { linkText, content, class: className, ...attributes } = Astro.props;

---

<a href={`/${content.collection}/${content.slug}`} class={className} {...attributes}>
  {linkText || <slot />}
</a>