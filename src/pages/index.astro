---
import { css } from '@styled-system/css'
import AppLayout from '@layouts/AppLayout.astro'
import PrimaryLayout from '@layouts/PrimaryLayout.astro'
import PricklyPearContainer from '@components/PricklyPearContainer.astro'
import Contact from '@components/Contact.astro'
import PhotosCard from '@components/PhotosCard.astro'
import SEOTags from '@components/SEOTags.astro'
import TextLink from '@components/TextLink.astro'
import LatestPost from '@components/LatestPost.astro'
---

<AppLayout>
  <SEOTags
    slot="head"
    description="Cassidy Smith is a front-end engineer and UI designer"
  />
  <PrimaryLayout>
    <div
      class={css({
        display: 'grid',
        gap: 'columnRule',
        container: 'bento',
        padding: 'columnRule',
        backgroundColor: 'columnRule',
        gridTemplateAreas: `
          'intro'
          'blog'
          'contact'
          'cactus'
          'photos'
        `,
        sm: {
          gridTemplateColumns: '5fr 4fr',
          gridTemplateAreas: `
            'intro blog'
            'intro cactus'
            'intro cactus'
            'contact cactus'
            'photos .'
          `,
        },
        md: {
          gridTemplateColumns: '10fr 5fr 5fr 10fr',
          gridTemplateAreas: `
            'intro intro intro cactus'
            'blog blog contact contact'
            'photos photos . .'
          `,
        },
        xl: {
          gridTemplateColumns: '10fr 5fr 5fr 10fr',
          gridTemplateAreas: `
            'intro intro intro cactus'
            'blog contact contact cactus'
            'photos photos . .'
          `,
        },
      })}
    >
      <main
        class:list={[
          css({
            gridArea: 'intro',
            padding: 'calc({spacing.bento.padding} * 2)',
            borderRadius: 'bento',
            _light: {
              color: 'purple.850',
              backgroundColor: 'purple.150',
            },
            _dark: {
              color: 'purple.275',
              backgroundColor: 'purple.875',
            },
          }),
        ]}
      >
        <h1
          class={css({
            textStyle: 'h1',
            marginBlockStart: 'lineHeightCrop.syne',
          })}
        >
          Hi — I’m Cassidy.
        </h1>
        <p class={css({})}>
          I’m a professional CSS Programmer, UI Builder, Web Weaver, Full-Stack
          Developer, Web Software Worker, Failed Designer, and perhaps a few
          other made-up titles! Perpetually and proudly a noob at web dev and
          life, I try to stay curious amid the chaos. Welcome to my <TextLink
            useColorStyles={false}
            href="https://maggieappleton.com/garden-history"
            >digital garden</TextLink
          > where I water my prickly projects and feed my creative brain worms.
        </p>
      </main>

      <LatestPost />
      <Contact />
      <PricklyPearContainer />
      <PhotosCard />
    </div>
  </PrimaryLayout>
</AppLayout>
